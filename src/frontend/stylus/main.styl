@import 'nib'

$dark-gray = #222
$gray = lighten($dark-gray, 30%)
$light-gray = lighten($gray, 50%)
$purple = #5B527F

html
  height 100%
  padding 0
  margin 0

body
  height 100%
  padding 0
  margin 0
  font-family 'Lato', sans-serif
  font-weight 100
  background $dark-gray
  color white

h1, h2, h3, h4
  font-weight 100

.navbar
  background transparent
  border none
  min-height 25px

.site-title
  font-size 4em

.project
  padding 0.4em
  cursor pointer

  .mega-octicon
    margin 0.6em
    float left

  &:hover
    transition: all 1s
    background $gray

  &.selected
    transition: all 0.5s
    background $light-gray
    color black

.project-details

  #deploy-button
    background $purple
    display none

  .meta
    overflow hidden
    width: 95%
    margin: 0 2.5%

    .buttons
      padding 1em 0

  pre
    width: 95%
    margin: 2.5%
    overflow-y scroll
    font-size 0.8em
    line-height 1.4em

.error
  margin-top 10em

.text-center
  text-align center

.pure-button
  &.purple
    background $purple
