envCheck = (envVariables) ->
    missing = []
    for envVar in envVariables
        if not process.env[envVar]
            missing.push(envVar)

    if missing.length
        if missing.length == 1
            throw new Error('Missing environment variable #{missing[0]}')
        else
            throw new Error('Missing environment variables #{missing.join(", ")}')

export envCheck
